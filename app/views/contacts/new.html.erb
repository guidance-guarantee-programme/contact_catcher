<h1>Record a Contact</h1>

<%= form_for @contact, layout: :basic do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Customer Name' %>
  </div>
  <div class="form-group">
    <%= f.text_field :phone, class: 'form-control', placeholder: 'Customer Telephone Number' %>
  </div>
  <div class="form-group">
    <%= f.text_area :notes, rows: 5, class: 'form-control', placeholder: 'Notes' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Record Contact', class: 'btn btn-default' %>
  </div>
<% end %>
